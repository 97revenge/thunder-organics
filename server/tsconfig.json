{
  "compilerOptions": {
    "types": ["jest"],
    "typeRoots": ["node_modules/@types"],
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "outDir": "out",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
